<div class="item">
  <div>Avatar URL</div>
  <div>
    <input
    type="text" 
    name="avatar_url"
    placeholder="http://"
    value="{{ teacher.avatar_url }}"
    >
  </div>
</div>

<div class="item">
  <div>Professor</div>
    <div>
      <input
      type="text"
      name="name"
      placeholder="Digite seu nome"
      value="{{ teacher.name }}"
      >
    </div>
</div>

<div class="item">
  <div>Data de nascimento</div>
  <div>
    <input
    type="date"
    name="birth_date"
    value="{{ teacher.birth_date }}"
    >
  </div>
</div>

<div class="item">
  <div>Grau de escolaridade</div>
  <div>
    <select name="education_level">
      <option 
        value="high_school"
        {% if teacher.education_level == "high_school" %}
          selected
        {% endif %}
      >
        Ensino Médio Completo
      </option>
      <option 
        value="university"
        {% if teacher.education_level == "university" %}
          selected
        {% endif %}
      >
        Ensino Superior Completo
      </option>
      <option 
        value="masters"
        {% if teacher.education_level == "masters" %}
          selected
        {% endif %}
      >
        Mestrado
      </option>
      <option 
        value="doctorate"
        {% if teacher.education_level == "doctorate" %}
          selected
        {% endif %}
      >
        Doutorado
      </option>
    </select>
  </div>
</div>

<div class="item">
  <div>Tipo de aula</div>
  <div>
    <span>
      <input 
        type="radio" 
        name="class_type" 
        value="presential"
        {% if teacher.class_type == "presential" %}
          checked
        {% endif %}
      >
      Presencial
    </span>

    <span>
      <input 
        type="radio" 
        name="class_type" 
        value="distance"
        {% if teacher.class_type == "distance" %}
          checked
        {% endif %}
      >
      À
     distância
    </span>
  </div>
</div>

<div class="item">
  <div>Área de atuação</div>
  <div>
    <input 
      type="text" 
      name="subjects_taught" 
      placeholder="Separe as diciplinas ensinadas por vírgula"
      value="{{ teacher.subjects_taught }}"
    >
  </div>
</div>

<button type="submit" onclick="Validate.allFields(event)">Salvar</button>
