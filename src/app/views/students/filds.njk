<div class="item">
  <div>Avatar URL</div>
  <div>
    <input
    type="text" 
    name="avatar_url"
    placeholder="http://"
    value="{{ student.avatar_url }}"
    >
  </div>
</div>

<div class="item">
  <div>Aluno</div>
    <div>
      <input
      type="text"
      name="name"
      placeholder="Digite seu nome"
      value="{{ student.name }}"
      >
    </div>
</div>

<div class="item">
  <div>Email</div>
  <div>
    <input
    type="email"
    name="email"
    value="{{ student.email }}"
    placeholder="Digite seu email"
    >
  </div>
</div>

<div class="item">
  <div>Data de nascimento</div>
  <div>
    <input
    type="date"
    name="birth_date"
    value="{{ student.birth_date }}"
    >
  </div>
</div>

<div class="item">
  <div>Ano escolar</div>
  <div>
    <select name="grade">
      <option 
        value="5"
        {% if student.grade == "5" %}
          selected
        {% endif %}
      >
        5º ano do ensino fundamental
      </option>
      <option 
        value="6"
        {% if student.grade == "6" %}
          selected
        {% endif %}
      >
        6º ano do ensino fundamental
      </option>
      <option 
        value="7"
        {% if student.grade == "7" %}
          selected
        {% endif %}
      >
        7º ano do ensino fundamental
      </option>
      <option 
        value="8"
        {% if student.grade == "8" %}
          selected
        {% endif %}
      >
        8º ano do ensino fundamental
      </option>
      <option 
        value="9"
        {% if student.grade == "9" %}
          selected
        {% endif %}
      >
        9º ano do ensino fundamental
      </option>
      <option 
        value="1"
        {% if student.grade == "1" %}
          selected
        {% endif %}
      >
        1º ano do ensino médio
      </option>
      <option 
        value="2"
        {% if student.grade == "2" %}
          selected
        {% endif %}
      >
        2º ano do ensino médio
      </option>
      <option 
        value="3"
        {% if student.grade == "3" %}
          selected
        {% endif %}
      >
        3º ano do ensino médio
      </option>
    </select>
  </div>
</div>

<div class="item">
  <div>Carga horária semanal</div>
  <div>
    <input
    type="number"
    name="workload"
    value="{{ student.workload }}"
    placeholder="O valor deve ser inserido em horas"
    >
  </div>
</div>

<div class="item">
  <div>Professor</div>
  <div>
    <select name="teacher_id">
      {% for teacher in teachers %}
        <option 
          value="{{ teacher.id }}"
          {% if student.teacher_id == student.teacher_id %}
            selected
          {% endif %}
        >
          {{ teacher.name }}
        </option>
      {% endfor %}
    </select>
  </div>
</div>

<button type="submit" onclick="Validate.allFields(event)">Salvar</button>
