{% extends "layout.njk" %}
{% import "parts/card.njk" as card %}

{% block content %}

  {% if student %}

    {% call card.render("alert") %}

      <div class="delete-lottie"></div>

      <div class="content">
        <h3>{{ student.name }}</h3>

        <P class="delete">Perfil deletado com sucesso</P>

        <a href="/students">Ver alunos</a>
      </div>

    {% endcall %}

  {% endif %}

  {% if teacher %}

    {% call card.render("alert") %}

      <div class="delete-lottie"></div>

      <div class="content">
        <h3>{{ teacher.name }}</h3>

        <P class="delete">Perfil deletado com sucesso</P>

        <a href="/teachers">Ver professores</a>
      </div>

    {% endcall %}

  {% endif %}

  <script src="/lottie.min.js"></script>

  <script>
    const element = document.querySelector('.delete-lottie');
    lottie.loadAnimation({
      container: element,
      renderer: 'svg',
      loop: false,
      autoplay: true,
      path: '/13605-deleted-successfully.json'
    });
  </script>

{% endblock content %}