{% extends "layout.njk" %}

{% block content %}
  <div class="card">

    <div class="image"style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover">
      <img >
    </div>

    <div class="details">
      <form method="POST" action="/teachers?_method=PUT">

        <h3>Detalhes</h3>
        
        {% include "teachers/filds.njk" %}
      
        <input 
        type="hidden"
        name="id" 
        value="{{ teacher.id }}"
        >
      </form>

      <form id="form-delete" action="/teachers?_method=DELETE" method="post">
        <input 
        type="hidden"
        name="id" 
        value="{{ teacher.id }}"
        >
      <button type="submit">Deletar</button>
      </form>
    </div>
  </div>
{% include "confirm.njk" %}

{% endblock content %}