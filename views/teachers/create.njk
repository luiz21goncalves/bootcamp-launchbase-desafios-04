{% extends "layout.njk" %}

{% block content %}
  <div class="card">

    <div class="image">
      <img >
    </div>

    <form class="details" method="POST" action="/teachers">

      <h3>Detalhes</h3>

      <div class="item">
        <div>Avatar URL</div>
        <div>
          <input
            type="text" 
            name="avatar_url"
            placeholder="http://"
          >
        </div>
      </div>

      <div class="item">
        <div>Professor</div>
        <div>
          <input
            type="text"
            name="name"
            placeholder="Digite seu nome"
          >
        </div>
      </div>

      <div class="item">
        <div>Data de nascimento</div>
        <div>
          <input
            type="date"
            name="birth"
          >
        </div>
      </div>

      <div class="item">
        <div>Grau de escolaridade</div>
        <div>
          <select name="schooling">
            <option value="high_school">Ensino Médio Completo</option>
            <option value="university">Ensino Superior Completo</option>
            <option value="masters">Mestrado</option>
            <option value="doctorate">Doutorado</option>
          </select>
        </div>
      </div>

      <div class="item">
        <div>Tipo de aula</div>
        <div>
          <span><input type="radio" name="type_of_class" value="presential">Presencial</span>
          <span><input type="radio" name="type_of_class" value="distance">À distância</span>
        </div>
      </div>

      <div class="item">
        <div>Área de atuação</div>
        <div>
          <input type="text" name="services" placeholder="Separe os serviços prestados por vírgula">
        </div>
      </div>

        <button type="submit">Salvar</button>
    
    </form>

  </div>
{% endblock content %}