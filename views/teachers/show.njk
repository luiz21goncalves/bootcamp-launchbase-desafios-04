{% extends "layout.njk" %}

{% block content %}
  <div class="card">

    <div class="image" style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover">
      <img >
    </div>

    <div class="details">

      <h3>Detalhes</h3>

      <div class="item">
        <div>Professor</div>
        <div>{{ teacher.name }}</div>
      </div>

      <div class="item">
        <div>Idade</div>
        <div>{{ teacher.age }}</div>
      </div>

      <div class="item">
        <div>Grau de escolaridade</div>
        <div>{{ teacher.graduation }}</div>
      </div>

      <div class="item">
        <div>Tipo de aula</div>
        <div>{{ "Ã€ distancia" if teacher.type_of_class == "distance" else "Presencial" }}</div>
      </div>

      <div class="item">
        <div>Acompanhamento</div>
        <div>
          {% for class in teacher.classes %}
            <span>{{ class }}</span>
          {% endfor %}
        </div>
      </div>

      <div class="item">
        <div>Desde</div>
        <div>{{ teacher.created_at }}</div>
      </div>

      <a href="/teachers/{{ teacher.id }}/show" class="button" >Editar</a>
    </div>

  </div>
{% endblock content %}